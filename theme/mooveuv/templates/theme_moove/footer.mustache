{{!
    @template   theme_moove/footer
    @author     2022 Juan Felipe Orozco Escobar <juanfe.ores@gmail.com>

    Overriden footer template for mooveuv theme.

    Context variables required for this template:
    * website       Website URL of DINTEV
    * mobile        Mobile number of DINTEV
    * mail          Support email address of Campus Virtual
    * youtube       YouTube URL of Universidad del Valle
    * facebook      Facebook URL of Universidad del Valle
    * twitter       Twitter URL of Universidad del Valle
    * instagram     Instagram URL of Universidad del Valle

    Example context (json):
    {
        "website": "https://dintev.univalle.edu.co",
        "mobile": "+57 2 318 2649 / 2653"
        "mail": "campusvirtual@correounivalle.edu.co"
        "youtube": "https://www.youtube.com/user/universidaddelvalle1"
        "facebook": "https://www.facebook.com/universidaddelvalle"
        "twitter": "https://twitter.com/univallecol"
        "instagram": "https://www.instagram.com/univallecol/"
    }
}}

<div class="footer-cv">
    <div class="container-fluid">

        <div class="row">
            <div class="privacy-policies col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <a href="{{#str}} footer_privacy_policy_url, theme_mooveuv {{/str}}" target="_blank">
                    {{#str}} footer_privacy_policy_desc, theme_mooveuv {{/str}}
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div><h4>{{#str}} footer_title, theme_mooveuv {{/str}}</h4></div>
                <div><h5>{{#str}} footer_subtitle, theme_mooveuv {{/str}}</h5></div>
                {{#website}} <div><a href="{{website}}" target="_blank"><i class="fa fa-globe" aria-hidden="true"></i> {{{website}}}</a></div> {{/website}}
                {{#mobile}} <div><i class="fa fa-phone"></i> {{{mobile}}}</div> {{/mobile}}
                {{#mail}} <div><a href="mailto:{{mail}}" target="_blank"><i class="fa fa-envelope" aria-hidden="true"></i> {{{mail}}}</a></div> {{/mail}}
                <div><i class="fa fa-building" aria-hidden="true"></i> {{#str}} footer_uv_address, theme_mooveuv {{/str}}</div>
            </div>
        </div>

        <div class="row justify-content-end">
            {{#youtube}}
                <div class="social-media-icons">
                    <a href="{{{youtube}}}" target="_blank">
                        <i class="fa fa-youtube-play" aria-hidden="true"></i>
                    </a>
                </div>
            {{/youtube}}
            {{#facebook}}
                <div class="social-media-icons">
                    <a href="{{{facebook}}}" target="_blank">
                        <i class="fa fa-facebook-square" aria-hidden="true"></i>
                    </a>
                </div>
            {{/facebook}}
            {{#twitter}}
                <div class="social-media-icons">
                    <a href="{{{twitter}}}" target="_blank">
                        <i class="fa fa-twitter-square" aria-hidden="true"></i>
                    </a>
                </div>
            {{/twitter}}
            {{#instagram}}
                <div class="social-media-icons">
                    <a href="{{{instagram}}}" target="_blank">
                        <i class="fa fa-instagram" aria-hidden="true"></i>
                    </a>
                </div>
            {{/instagram}}
        </div>

    </div>
</div>

{{{ output.standard_end_of_body_html }}}

{{#js}}
    require(['theme_boost/footer-popover'], function(FooterPopover) {
        FooterPopover.init();
    });

    require(['theme_mooveuv/language_strings'], function(LanguageStrings) {
        LanguageStrings.init();
    });

    require(['theme_mooveuv/upload_users'], function(UploadUsers) {
        UploadUsers.init();
    });

    require(['theme_mooveuv/edit_styles'], function(EditStyles) {
        EditStyles.init();
    });

{{/js}}
